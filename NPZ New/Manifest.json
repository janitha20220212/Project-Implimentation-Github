{
    "manifest_version": 3,
    "name": "ğ—¡ğ—£ğ—­ | Spolier Blocker",
    "version": "1.0",
    "description": "Stay spoiler-free with NPZ Spoiler Blocker. Block spoilers effortlessly on Reddit and Twitter with advanced text analysis.",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "npznew.png",
            "48": "npznew.png",
            "128": "npznew.png"
        }
    },
    "icons": {
        "16": "npznew.png",
        "48": "npznew.png",
        "128": "npznew.png",
        "16_enabled": "npznew_enabled.png",
        "48_enabled": "npznew_enabled.png",
        "128_enabled": "npznew_enabled.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.reddit.com/*", "https://twitter.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}
